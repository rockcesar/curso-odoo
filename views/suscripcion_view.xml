<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
<!--
        Vista form de CO Suscripcion: 
        Se mostrar치 al momento de crear un registro.
-->
        <record id="view_suscripcion_form" model="ir.ui.view">
            <field name="name">co.suscripcion.form</field>
            <field name="model">co.suscripcion</field>
            <field name="arch" type="xml">
                <form string="Suscripcion" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="code" />
                            <h1>
                                <field name="code" readonly="1"/>
                            </h1>
                            <label for="suscriptor_id" string="Suscriptor"/>
                            <field name="suscriptor_id" />
                        </div>
                        <notebook>
                            <page string="Detalles">
                                <group>
                                    <field name="type"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
<!--
                                    <separator />
-->
                                    <field name="active"/>
<!--
                                    <separator string="Medios disponibles"/>
-->
                                </group>
<!--
                                <group string="Medios disponibles">
                                    <field name="medio_ids" nolabel="1"/>
                                </group>
-->
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
<!--
        Vista tree de CO Suscripcion: 
        Se mostrar치 en el 치rbol, la lista de registros creados.
-->
        <record id="view_suscripcion_tree" model="ir.ui.view">
            <field name="name">co.suscripcion.tree</field>
            <field name="model">co.suscripcion</field>
            <field name="arch" type="xml">
                <tree string="Suscripcion" colors="brown:type=='bronce';gray:type=='plata';orange:type=='oro'">
                    <field name="code"/>
                    <field name="type"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="active"/>
                    <field name="suscriptor_id"/>
                </tree>
            </field>
        </record>
        
        <record id="action_suscripcion" model="ir.actions.act_window">
            <field name="name">Suscripcion</field>
            <field name="res_model">co.suscripcion</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="view_suscripcion_tree" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Ac치 se registran la suscripcion.
                </p>
            </field>
        </record>
        
        <menuitem action="action_suscripcion" id="menu_suscripcion"
                sequence="5" parent="submenu_suscripciones" />
    </data>
</openerp>
