<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
<!--
        Vista form de CO Solicitud: 
        Se mostrar치 al momento de crear un registro.
-->
        <record id="view_solicitud_form" model="ir.ui.view">
            <field name="name">co.solicitud.form</field>
            <field name="model">co.solicitud</field>
            <field name="arch" type="xml">
                <form string="Solicitud" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="code" />
                            <h1>
                                <field name="code" required="1"/>
                            </h1>
                            <label for="suscriptor_id" string="Suscriptor"/>
                            <field name="suscriptor_id"  />
                            <label for="multimedia_id" string="Multimedia"/>
                            <field name="multimedia_id"  />
                            <label for="medio_id" string="Medio"/>
                            <field name="medio_id"  />
                            <label for="tienda_id" string="Tienda"/>
                            <field name="tienda_id"  />
                        </div>
                        <notebook>
                            <page string="Detalles">
                                <group>
                                    <field name="requested_date"/>
                                    <field name="qty_days"/>
<!--
                                    <separator string="Medios disponibles"/>
-->
                                </group>
<!--
                                <group string="Medios disponibles">
                                    <field name="medio_ids" nolabel="1"/>
                                </group>
-->
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
<!--
        Vista tree de CO Solicitud: 
        Se mostrar치 en el 치rbol, la lista de registros creados.
-->
        <record id="view_solicitud_tree" model="ir.ui.view">
            <field name="name">co.solicitud.tree</field>
            <field name="model">co.solicitud</field>
            <field name="arch" type="xml">
                <tree string="Solicitud">
                    <field name="code"/>
                    <field name="suscriptor_id"/>
                    <field name="multimedia_id"/>
                    <field name="medio_id"/>
                    <field name="tienda_id"/>
                    <field name="requested_date"/>
                    <field name="qty_days"/>
                </tree>
            </field>
        </record>
        
        <record id="action_solicitud" model="ir.actions.act_window">
            <field name="name">Solicitud</field>
            <field name="res_model">co.solicitud</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="view_solicitud_tree" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Ac치 se registra la solicitud.
                </p>
            </field>
        </record>
        
        <menuitem action="action_solicitud" id="menu_solicitud"
                sequence="5" parent="submenu_suscripciones" />
    </data>
</openerp>
